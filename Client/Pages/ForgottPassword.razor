@page "/forgottpassword"


<MudGrid xs="12">
    <MudPaper Elevation="0" Class="d-flex flex-column align-center mud-width-full py-8">
        <MudItem>
            <MudText Typo="Typo.h3" Class="pt-16 mb-16" Style="font-weight:bold" Color="Color.Primary">Forgott password</MudText>
            <MudElement Style="font-weight:bold;">Please give your e-mail address!</MudElement>
            <MudTextField Label="Your e-mail address" Variant="Variant.Text" @bind-Value="emailAdress" /><br />
            <MudButton Variant="Variant.Filled" Color="Color.Primary">Send email</MudButton>
        </MudItem>
    </MudPaper>
</MudGrid>

@code{
    private string emailAdress = null;
}